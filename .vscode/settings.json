{
    // ===== Editor Font Settings =====
    // Specify the primary and fallback fonts for the editor
    "editor.fontFamily": "'PlemolJP','FiraCode Nerd Font Mono', Consolas, 'Courier New', monospace",
    // Set the base font size for better readability
    "editor.fontSize": 16,

    // ===== Editor Visual Aids =====
    // Enable bracket pair guides to improve code structure visibility
    "editor.guides.bracketPairs": "active",
    // Color matching bracket pairs for easier identification
    "editor.bracketPairColorization.enabled": true,
    // Display whitespace characters for precise spacing
    // e.g. "·" for space, "→" for tab, "¬" for line break
    "editor.renderWhitespace": "all",
    // Show control characters for better code formatting
    // e.g. "→" for tab, "·" for space, "¶" for line break
    "editor.renderControlCharacters": true,
    // Configure indent rainbow visualization
    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.lightIndicatorStyleLineWidth": 2,

    // ===== Editor Behavior =====
    // Disable cursor animation for smoother performance
    "editor.cursorSmoothCaretAnimation": "off",
    // Set smooth cursor blinking for better visibility
    "editor.cursorBlinking": "smooth",
    // Enable automatic formatting when saving files
    "editor.formatOnSave": true,

    // ===== Editor Interface =====
    // Disable minimap to save screen space
    "editor.minimap.enabled": false,

    // ===== File Management =====
    // Ensure consistent file endings
    "files.insertFinalNewline": true,
    // Keep files clean by removing extra newlines
    "files.trimFinalNewlines": true,

    // ===== Explorer Settings =====
    // Show full folder structure in the explorer
    "explorer.compactFolders": false,

    // ===== Source Control =====
    // Set the width of the gutter for diff indicators
    "scm.diffDecorationsGutterWidth": 5
}
