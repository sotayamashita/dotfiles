# git --no-pager diff
# https://github.com/dandavison/delta

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    # use n and N to move between diff sections
    navigate = true
    # or light = true, or omit for auto-detection
    dark = true
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = zdiff3
